      <p>&nbsp&nbsp&nbsp-<%= plan.name %></p>
    <% end %>

  <h4>Consumer Set Plans</h4>
    <% @tmo_plan.consumer_set_plans.each do |plan| %>
      <p>&nbsp&nbsp&nbsp-<%= plan.name %></p>
    <% end %>

  <h4>Senior Mix Plans</h4>
    <% @tmo_plan.senior_mix_plans.each do |plan| %>
      <p>&nbsp&nbsp&nbsp-<%= plan.name %></p>
    <% end %>

  <h4>Senior Set Plans</h4>
    <% @tmo_plan.senior_set_plans.each do |plan| %>
      <p>&nbsp&nbsp&nbsp-<%= plan.name %></p>
    <% end %>

  <h4>Military Mix Plans</h4>
    <% @tmo_plan.military_mix_plans.each do |plan| %>
      <p>&nbsp&nbsp&nbsp-<%= plan.name %></p>
    <% end %>

  <h4>Military Set Plans</h4>
    <% @tmo_plan.military_set_plans.each do |plan| %>
      <p>&nbsp&nbsp&nbsp-<%= plan.name %></p>
    <% end %>

<h3><%= @verizon.name %></h3>

  <p><%= @verizon_plan.plan_name %></p>

  <p><%= "Data-Price: " if @verizon_plan.data_price%><%= number_to_currency(@verizon_plan.data_price, precision: 0) %></p>

  <% @verizon_plan.line_pricing.each.with_index(1) do |line, index| %>
    <p>
    <%= "Line-#{index}"%>: <%= number_to_currency(line.price, precision: 0) %>

    <%= "- #{@verizon_plan.unlimited_plan_name[index-1].name}" if @verizon_plan.unlimited_plan_name%>
    </p>
  <% end %>

  <p>Total: <%= number_to_currency(@verizon_plan.plan_total, precision: 0) %></p>

<h3><%= @att.name %></h3>

  <p><%= @att_plan.plan_calculations.name %></p>
  <p>Data-Price : <%= number_to_currency(@att_plan.plan_calculations.data_price, precision: 0) %></p>
  
    <% @att_plan.line_pricing.each.with_index(1) do |line, index| %>
    <p><%= "Line-#{index}"%>: <%= number_to_currency(line.price, precision: 0) %></p>
    <% end %>

  <p>Total: <%= number_to_currency(@att_plan.plan_total(@att_plan.plan_calculations), precision: 0) %></p>

