<h1>Plan Recommendations</h1>

<h3><%= @tmo.name %></h3>
  <% @tmo_plan.line_pricing.each.with_index(1) do |line, index|%>
    <p><%= "Line-#{index}"%>: <%= number_to_currency(line.price, precision: 0) %> - <%= @tmo_plan.hd_video[index-1].name%></p>
  <% end %>

  <p>Total: <%= number_to_currency(@tmo_plan.total_price, precision: 0) %></p>

<h3><%= @verizon.name %></h3>

  <p><%= @verizon_plan.plan_name%></p>
  <p>Data-Price: <%= number_to_currency(@verizon_plan.bucket_plan_sorter.data_price, precision: 0)%></p>

  <% @verizon_plan.price_generator.each.with_index(1) do |plan, index| %>
    <p><%= "Line-#{index}"%>: <%= number_to_currency(plan.price, precision: 0) %></p>
  <% end %>

  <p>Total: <%= number_to_currency(@verizon_plan.total_price, precision: 0) %></p>

