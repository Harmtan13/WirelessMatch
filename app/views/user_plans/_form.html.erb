<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <% @plan.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>
      
  <div class="form-group">
    <div><%= f.label :auto_pay, "Carriers give discounts for enrolling in Auto-Pay, Do you want to enroll?"%></div>
    <span><%= f.radio_button :auto_pay, true, checked: true %> Yes</span>
    <span><%= f.radio_button :auto_pay, false %> No</span>
  </div>
  <br>
  <ul>
    <%= f.fields_for :user_lines do |line_form| %>
    <li>
      <div><%= line_form.label :data_amount, "How much data do you need?" %></div>
        <span><%= line_form.radio_button :data_amount, 1 %> 1GB</span> |
        <span><%= line_form.radio_button :data_amount, 2 %> 2GB</span> |
        <span><%= line_form.radio_button :data_amount, 4 %> 4GB</span> |
        <span><%= line_form.radio_button :data_amount, 5 %> 5GB</span> |
        <span><%= line_form.radio_button :data_amount, 8 %> 8GB</span> |
        <span><%= line_form.radio_button :data_amount, 10 %> 10GB</span> |
        <span><%= line_form.radio_button :data_amount, 20 %> 20GB</span> |
        <span><%= line_form.radio_button :data_amount, Float::INFINITY %> Unlimited</span>
    </li>
      <br>
    <li>
      <div><%= line_form.label :hotspot, "Of your total data, about how much is hotspot use?" %></div>
        <span><%= line_form.radio_button :hotspot, 0 %> What's Hotspot?</span> |
        <span><%= line_form.radio_button :hotspot, 1 %> 1GB</span> |
        <span><%= line_form.radio_button :hotspot, 5 %> 5GB</span> |
        <span><%= line_form.radio_button :hotspot, 10 %> 10GB</span> |
        <span><%= line_form.radio_button :hotspot, 15 %> 15GB</span>
    </li>
      <br>
    <li>
      <div><%= line_form.label :hd_video, "Does this line need HD-Video?" %></div>
        <span><%= line_form.radio_button :hd_video, true, checked: true %> Yes</span> |
        <span><%= line_form.radio_button :hd_video, false %> No</span>
        <hr>
    <% end %>
  </ul>
  

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>