<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <% @plan.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>
      
  <div class='row'>
    <div class="card center">
      <div class="card-body text-center">
        <div class='col-md-12'>
        <div>Autopay enrollment unlocks discounts from carriers. Would you like to enroll?</div>
          <div class="form-check-inline">
              <%= f.radio_button :auto_pay, true, class: 'form-check-input' %>
              <%= f.label :auto_pay, "Yes", class: 'form-check-label'%>
          </div>
            
          <div class="form-check-inline">
            <%= f.radio_button :auto_pay, false, class: 'form-check-input' %>
            <%= f.label :auto_pay, "No", class: 'form-check-label'%>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="row no-gutter">
    <%= f.fields_for :user_lines do |line| %>
      <%= render 'user_line_fields', f: line %>
    <% end %>

    <div class="col-md-3 text-center add-line">
        <%= link_to_add_association 'Add Line', f, :user_lines, class: 'btn btn-success' %>
    </div>
  </div>

  <br>
  <br>

  <div class="actions text-center">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
